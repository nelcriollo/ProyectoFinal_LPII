package log.ministerio.controlador;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import log.ministerio.services.AccesoService;
import log.ministerio.services.BienesService;

/**
 * Servlet implementation class ServletBienes
 */
@WebServlet("/ServletBienes")
public class ServletBien extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     * 
     *
     */
	private BienService servicioBienes= new BienService();
	
    public ServletBien() {
        super();
        // TODO Auto-generated constructor stub
        
    }

	/**
	 * @see HttpServlet#service(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		
		String accion;
		accion=request.getParameter("tipo");
		if(accion.equals("LISTAR")) 
			listarBienes(request,response);
		else if(accion.equals("REGISTRAR")) 
			registrarBienes(request,response);
		else if(accion.equals("ACTUALIZAR")) 
			actualizarBienes(request,response);
		else if(accion.equals("ELIMINAR")) 
			eliminarBienes(request,response);
	}

	private void listarBienes(HttpServletRequest request, HttpServletResponse response) {
		// TODO Auto-generated method stub
		List<Bienes> data=BienesService.ListarBienes();

        request.setAttribute("listaBienes", data);

        request.getRequestDispatcher("/Mantenimiento_Bienes.jsp").forward(request, response);
		
	}

	private void actualizarBienes(HttpServletRequest request, HttpServletResponse response) {
		// TODO Auto-generated method stub
		
	}

	private void registrarBienes(HttpServletRequest request, HttpServletResponse response) {
		// TODO Auto-generated method stub
		
	}

	private void eliminarBienes(HttpServletRequest request, HttpServletResponse response) {
		// TODO Auto-generated method stub
		
	}

}
